pipeline {
    agent any 
    stages {
        stage('install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('testing code') {
            steps {
                sh 'npm test'
            }
        }
        stage('Run Integration Tests') {
            steps {
                sh 'npm test test/integration/db.Connection.test.js'
            }
        }
    }
}